rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;  // Allows anyone to read user documents
      allow write: if request.auth != null && request.auth.uid == userId;  // Only allow users to write their own document
    }
    
    match /challenges/{challengeId} {
      allow read, write: if request.auth != null;  // Only authenticated users can read and write challenges
    }
    
    // Add rules for other collections as needed
  }
}