rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;  // Allows anyone to read user documents
      allow write: if request.auth != null && request.auth.uid == userId;  // Only allow users to write their own document
    }
    
    match /challenges/{challengeId} {
      allow read, write: if request.auth != null;  // Only authenticated users can read and write challenges
    }
    
    match /notifications/{notificationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;  // Only allow users to read their own notifications
      allow create: if request.auth != null;  // Allow authenticated users to create notifications
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;  // Only allow users to update or delete their own notifications
    }
  }
}